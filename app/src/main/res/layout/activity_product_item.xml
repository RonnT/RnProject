<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="center"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/activity_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standart_margin"
                android:layout_marginLeft="@dimen/standart_margin"
                android:layout_marginRight="@dimen/standart_margin"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:typeface="roboto_regular" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/activity_product_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/standart_margin"
                android:layout_marginLeft="@dimen/standart_margin"
                android:layout_marginRight="@dimen/standart_margin"
                android:textColor="@color/black_73_opacity"
                android:textSize="14sp"
                app:typeface="roboto_regular"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>