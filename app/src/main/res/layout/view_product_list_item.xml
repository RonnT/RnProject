<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@drawable/list_item_bg_selector">

    <ImageView
        android:id="@+id/view_product_list_item_preview"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginRight="@dimen/standart_margin"
        android:layout_marginEnd="@dimen/standart_margin"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/standart_margin"
        android:layout_marginStart="@dimen/standart_margin"
        android:layout_marginRight="@dimen/standart_margin"
        android:layout_marginEnd="@dimen/standart_margin"
        android:layout_toLeftOf="@+id/view_product_list_item_preview"
        android:orientation="vertical">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/view_header_title"
            style="@style/text_16_black_87"
            android:ellipsize="end"
            android:singleLine="true"
            app:typeface="roboto_regular" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/view_product_list_item_announcement"
            style="@style/text_14_black_54"
            android:maxLines="2"
            android:ellipsize="end"
            app:typeface="roboto_regular" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:background="@color/list_divider"/>

</RelativeLayout>